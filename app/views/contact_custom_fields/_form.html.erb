<%= form_for(@contact_custom_field) do |f| %>
  <% if @contact_custom_field.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact_custom_field.errors.count, "error") %> prohibited this contact_custom_field from being saved:</h2>

      <ul>
      <% @contact_custom_field.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <%= f.hidden_field :user_id %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
    <% selected_option = @contact_custom_field.field_type %>
    <% options = options_for_select(
      [
        ['Text Field','text_field'], 
        ['Text Area', 'text_area'], 
        ['Combo Box', 'combo_box']
      ], selected_option) %>

    <%= f.label :field_type %><br>
    <%= f.select :field_type, options %>
  </div>
  
  <div class="form-group">
    <%= f.label :combobox_options, 'ComboBox options' %><br>
    <%= f.text_area :combobox_options, rows: 5 %>
  </div>
  
  <div>
    <%= f.submit 'Save', class: "btn btn-primary" %>
  </div>
<% end %>
