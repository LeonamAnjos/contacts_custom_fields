<% provide(:title, "Contacts") %>

<h2>Contacts</h2>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @contacts.each do |contact| %>
      <tr>
        <td><%= contact.name %></td>
        <td><%= contact.email %></td>
        <td>
          <%= link_to contact, class: "btn btn-default btn-xs", title: 'Show' do %>
            <span class="glyphicon glyphicon-check"></span>
          <% end %>
          
          <%= link_to edit_contact_path(contact), class: "btn btn-default btn-xs", title: 'Edit' do %>
            <span class="glyphicon glyphicon-edit"></span>
          <% end %>
          
          <%= link_to contact, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-default btn-xs", title: 'Delete' do %>
            <span class="glyphicon glyphicon-remove"></span>
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to new_contact_path, class: "btn btn-default" do %>
  <span class="glyphicon glyphicon-plus"></span>
  <span >New Contact</span>
<% end %>
